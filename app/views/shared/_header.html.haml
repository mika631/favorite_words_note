%header
  .main
    .main__upside
      .main__upside__name
      =link_to "/" do
        favorite words note
      .main__upside__search
        -# = form_tag path, method: :get, class:"main__upside__search__form" do
        -#   = text_field_tag :keyword, params[:keyword], class: "main__upside__search__form--folder", placeholder:"探したい人を入力してください"
