    .main__downside
      .main__downside__button
        .main__downside__button__content
        - if user_signed_in?
          .main__downside__button__content__logout
          =link_to destroy_user_session_path, method: :delete, class:'button' do
            .main__downside__button__content__logout-name
              log out
        - else
          .main__downside__button__content__in
            .main__downside__button__content__in__login
            =link_to new_user_session_path,method: :get, class:'button' do
              log in
            .main__downside__button__content__in__signin
              =link_to new_user_registration_path, class:'button' do
                sign in
          
        .main__downside__user
        -if user_signed_in?
          =link_to "users/#{current_user.id}" do
            =fa_icon 'user', class: 'icon'
